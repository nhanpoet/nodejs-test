<div class="mt-4 container">
  <div class="row g-5">
    {{#each courses}}

      <div class="col-sm-6 col-lg-4">
        <div class="card" style="height: 500px;">
          <a href="/courses/{{this.slug}}">
            <img
              style=" height: 300px"
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            /></a>

          <div class="card-body">
            <a href="/courses/{{this.slug}}"><h5
                class="card-title"
              >{{this.name}}</h5></a>

            <p class="card-text">{{this.desc}}.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>