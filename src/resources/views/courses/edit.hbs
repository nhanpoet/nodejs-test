<div class="mt-4">
  <h3>Edit Course</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Name Course</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
      />

      <label for="desc" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="desc"
        name="desc"
      >{{course.desc}}</textarea>

      <label for="videoId" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{course.videoId}}"
      />

    </div>

    <button type="submit" class="btn btn-primary">Update Course</button>
  </form>
</div>